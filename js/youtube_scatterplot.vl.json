{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 880,
    "height": 500,
    "title": { "text": "Top 100 Youtubers - Subscriber Growth vs. Video Views (Last 30 Days)" },
    
    "params": [
        
        {
            "name": "minViews",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 2000000000,
              "step": 1000000,
                "name": "Minimum Video Views (Last 30 Days): "
            }
        },
        {
            "name": "minSubscribers",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 8000000,
                "step": 5000,
                "name": "Minimum Subscriber Growth (Last 30 Days): "
            }
        }
    ],
    "data": {
        "url": "https://raw.githubusercontent.com/TionYuXin/FIT3179-HOMEWORK-WEEK-9-/main/Global_YouTube_Statistics.csv"
    },
    "transform": [
        {"window": [{"op": "rank", "as": "rank"}]},
        {"filter": "datum.rank <= 100"},
        {"filter": "datum.video_views_for_the_last_30_days >= minViews"},
        {"filter": "datum.subscribers_for_last_30_days >= minSubscribers"}
    ],
    "layer": [
        {
            "mark": "point",
            "encoding": {
                "x": {
                    "field": "subscribers_for_last_30_days",
                    "type": "quantitative",
                    "title": "Subscriber Growth (Last 30 Days) [Thousands]",
                    "axis": {
                        "labelExpr": "datum.value / 1e3 + 'K'",
                        "format": ",.1f",
                        "tickCount": 5
                    }
                },
                "y": {
                    "field": "video_views_for_the_last_30_days",
                    "type": "quantitative",
                    "title": "Video Views (Last 30 Days) [Millions]",
                    "axis": {
                        "labelExpr": "datum.value / 1e6 + 'M'",
                        "format": ",.1f",
                        "tickCount": 5
                    }
                },
                "tooltip": [
                    {"field": "Youtuber", "type": "nominal", "title": "Youtuber"},
                    {"field": "subscribers_for_last_30_days", "type": "quantitative", "title": "Subscriber Growth (Last 30 Days) [Thousands]", "format": ",.1f"},
                    {"field": "video_views_for_the_last_30_days", "type": "quantitative", "title": "Video Views (Last 30 Days) [Millions]", "format": ",.1f"}
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": 5  
            },
            "encoding": {
                "x": {
                    "field": "subscribers_for_last_30_days",
                    "type": "quantitative"
                },
                "y": {
                    "field": "video_views_for_the_last_30_days",
                    "type": "quantitative"
                },
                "text": {
                    "field": "Youtuber"
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                  "condition": {
                      "test": "datum.Youtuber == 'T-Series' || datum.Youtuber == 'MrBeast' || datum.Youtuber == 'Cocomelon - Nursery Rhymes' || datum.Youtuber == 'SET India' || datum.Youtuber == 'Zee TV' || datum.Youtuber == 'Sony SAB'",
                      "value": 1
                  },
                  "value": 0
              }
            }
        }
    ]
}