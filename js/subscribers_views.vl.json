{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 400,
  "title": "First 1000 Youtube's Channels Total Views and Subscribers by Country",
  
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TionYuXin/Data-Visualisation-2/refs/heads/main/js/ne_110m_with%20ocean.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TionYuXin/Data-Visualisation-2/refs/heads/main/js/ocean.json",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "graticule": {
          "step": [30, 30] 
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "lightgray", 
        "strokeWidth": 0.5 
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TionYuXin/Data-Visualisation-2/refs/heads/main/YouTube_Statistics.csv"
      },
      "transform": [
        {
          "window": [
            {"op": "row_number", "as": "rank"}
          ]
        },
        {
          "filter": "datum.rank <= 100"
        },
        {
          "filter": "datum['Country'] !== 'nan' && datum['subscribers'] !== 'nan'"
        },
        {
          "aggregate": [
            {"op": "sum", "field": "video views", "as": "total_video_views"},
            {"op": "sum", "field": "subscribers", "as": "total_subscribers"},
            {"op": "mean", "field": "Latitude", "as": "avg_latitude"},
            {"op": "mean", "field": "Longitude", "as": "avg_longitude"}
          ],
          "groupby": ["Country"]
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.9
      },
      "encoding": {
        "longitude": {
          "field": "avg_longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "avg_latitude",
          "type": "quantitative"
        },
        "size": {
          "field": "total_video_views",
          "type": "quantitative",
          "title": "Total Views(Billions)",
          "scale": {
            "type": "threshold",
            "domain": [10000000000, 50000000000, 100000000000],
            "range": [200, 500, 1000, 1500]
          },
          "legend": {
            "format": ".1s"
          }
        },
        "color": {
          "field": "total_subscribers",
          "type": "quantitative",
          "title": "Total Subscribers(Billions)",
          "scale": {
            "type": "threshold",
            "domain": [50000000, 200000000, 300000000, 1000000000],
            "range": ["#ffeda0", "#feb24c", "#fc4e2a", "#e31a1c", "#b10026"]
          },
          "legend": {
            "format": ".1s"
          }
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "total_video_views", "type": "quantitative", "title": "Total Video Views", "format": ".3s"},
          {"field": "total_subscribers", "type": "quantitative", "title": "Total Subscribers", "format": ".3s"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TionYuXin/Data-Visualisation-2/refs/heads/main/YouTube_Statistics.csv"
      },
      "transform": [
        {
          "window": [
            {"op": "row_number", "as": "rank"}
          ]
        },
        {
          "filter": "datum.rank <= 100"
        },
        {
          "filter": "datum['Country'] === 'United States' || datum['Country'] === 'Brazil' || datum['Country'] === 'India' || datum['Country'] === 'Russia'" 
        },
        {
          "aggregate": [
            {"op": "mean", "field": "Latitude", "as": "avg_latitude"},
            {"op": "mean", "field": "Longitude", "as": "avg_longitude"}
          ],
          "groupby": ["Country"]
        }
      ],
      "mark": {
        "type": "text",
        "dy": -10,
        "fontSize": 10,
        "color": "black"
      },
      "encoding": {
        "longitude": {
          "field": "avg_longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "avg_latitude",
          "type": "quantitative"
        },
        "text": {
          "field": "Country",
          "type": "nominal"
        }
      }
    }
  ]
}

